<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
  <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
  <style type="text/css">body, table, tr, td, h1, h2, h3, p {font-family: Arial, Helvetica, sans-serif; color: #313236;} </style>
</head>

<body>

<table width="500" border="0" cellpadding="0" style="font-size: 16px;"> <!-- container table for margins -->
  <tr><td width="20" height="20"></td><td width="460" height="20"></td><td width="20" height="20"></td></tr>
  <tr><td width="20"></td>
  <td width="460">
  <table width="460" border="0" cellpadding="0"> <!-- actual table containing informations -->

		<tr><td width="2"></td><td width="200"></td><td width="2"></td><td width="254"></td><td width="2"></td></tr> <!-- initial structure -->

		<!-- COURSE / ACCOMMODATION / TRANSFER -->

		<tr><td width="2"></td> <!-- headline (first part)-->
		<td colspan="3">
			<h1 style="font-size: 22px; color: #0074D9; font-family: Arial, Helvetica, sans-serif; margin: 0; mso-line-height-rule: exactly;">Enrollment for</h1>
		</td>
		<td width="2"></td>
		</tr>

		<tr><td width="2"></td> <!-- headline (second part: school name) -->
		<td colspan="3">
			<h1 style="font-size: 22px; color: #0074D9; font-family: Arial, Helvetica, sans-serif; margin: 0; mso-line-height-rule: exactly;">{{ school_name }}</h1>
		</td>
		<td width="2"></td>
		</tr>

		<tr><td colspan="5" height="20"></td></tr> <!-- empty row -->
		{{#if location}}
		<tr><td width="2"></td>
		<td width="200"><b>Location</b></td>
		<td width="2"></td>
		<td width="254">{{ location }}</td>
		<td width="2"></td>
		</tr>
		<tr><td colspan="5" bgcolor="#E5E5E5" height="1"></td></tr> <!-- grey line -->
		{{/if}}
		<tr><td width="2"></td>
		<td width="200"><b>Course</b></td>
		<td width="2"></td>
		<td width="254">{{ course }}</td>
		<td width="2"></td>
		</tr>
		<tr><td colspan="5" bgcolor="#E5E5E5" height="1"></td></tr> <!-- grey line -->
		{{#if additional_course}}
		<tr><td width="2"></td>
		<td width="200"><b>Additional Course</b></td>
		<td width="2"></td>
		<td width="254">{{ additional_course }}</td>
		<td width="2"></td>
		</tr>
		<tr><td colspan="5" bgcolor="#E5E5E5" height="1"></td></tr> <!-- grey line -->
		{{/if}}
		<tr><td width="2"></td>
		<td width="200"><b>Level</b></td>
		<td width="2"></td>
		<td width="254">{{ level }}</td>
		<td width="2"></td>
		</tr>
		<tr><td colspan="5" bgcolor="#E5E5E5" height="1"></td></tr> <!-- grey line -->

		<tr><td colspan="5" height="20"></td></tr> <!-- empty row -->

		<tr><td width="2"></td>
		<td width="200"><b>Start</b></td>
		<td width="2"></td>
		<td width="254">{{ course_start }}</td>
		<td width="2"></td>
		</tr>
		<tr><td colspan="5" bgcolor="#E5E5E5" height="1"></td></tr> <!-- grey line -->

		<tr><td width="2"></td>
		<td width="200"><b>Duration in Weeks</b></td>
		<td width="2"></td>
		<td width="254">{{ course_length }}</td>
		<td width="2"></td>
		</tr>
		<tr><td colspan="5" bgcolor="#E5E5E5" height="1"></td></tr> <!-- grey line -->

		<tr><td colspan="5" height="20"></td></tr> <!-- empty row -->

		
		<tr><td width="2"></td>
		<td width="200"><b>Accommodation</b></td>
		<td width="2"></td>
		{{#if no_accommodation}}
		<td width="254">None</td>
		{{else}}
		<td width="254">{{ accommodation }}</td>
		{{/if}}
		<td width="2"></td>
		</tr>
		<tr><td colspan="5" bgcolor="#E5E5E5" height="1"></td></tr> <!-- grey line -->
		{{#unless no_accommodation}}
		<tr><td width="2"></td>
		<td width="200"><b>Arrival</b></td>
		<td width="2"></td>
		<td width="254">{{ accommodation_arrival }}</td>
		<td width="2"></td>
		</tr>
		<tr><td colspan="5" bgcolor="#E5E5E5" height="1"></td></tr> <!-- grey line -->
		<tr><td width="2"></td>
		<td width="200"><b>Departure</b></td>
		<td width="2"></td>
		<td width="254">{{ accommodation_departure }}</td>
		<td width="2"></td>
		</tr>
		<tr><td colspan="5" bgcolor="#E5E5E5" height="1"></td></tr> <!-- grey line -->
		{{/unless}}

		<tr><td colspan="5" height="20"></td></tr> <!-- empty row -->

		<tr><td width="2"></td>
		<td width="200"><b>Transfer</b></td>
		<td width="2"></td>
		{{#if no_transfer}}
		<td width="254">None</td>
		{{else}}
		<td width="254">{{ transfer }}</td>
		{{/if}}
		<td width="2"></td>
		</tr>
		<tr><td colspan="5" bgcolor="#E5E5E5" height="1"></td></tr> <!-- grey line -->

		<tr><td colspan="5" height="20"></td></tr> <!-- empty row -->

		<!-- PERSONAL DATA -->

		<tr><td width="2"></td><!-- headline -->
		<td colspan="3">
			<h1 style="font-size: 22px; color: #0074D9; font-family: Arial, Helvetica, sans-serif; margin: 0; mso-line-height-rule: exactly;">Personal Data</h1>
		</td>
		<td width="2"></td>
		</tr>

		<tr><td colspan="5" height="20"></td></tr> <!-- empty row -->

		<tr><td width="2"></td><td colspan="3"> <!-- sub-headline (H2) -->
		<h2 style="font-size:19px; font-family: Arial, Helvetica, sans-serif; margin: 0; mso-line-height-rule: exactly;">Personal Data</h2>
		</td><td width="2"></td></tr>

		<tr><td colspan="5" height="5"></td></tr> <!-- empty row (5) -->

		<tr><td width="2"></td>
		<td width="200"><b>Title</b></td>
		<td width="2"></td>
		<td width="254">{{ gender }}</td>
		<td width="2"></td>
		</tr>
		<tr><td colspan="5" bgcolor="#E5E5E5" height="1"></td></tr> <!-- grey line -->

		<tr><td width="2"></td>
		<td width="200"><b>First Name</b></td>
		<td width="2"></td>
		<td width="254">{{ firstname }}</td>
		<td width="2"></td>
		</tr>
		<tr><td colspan="5" bgcolor="#E5E5E5" height="1"></td></tr> <!-- grey line -->

		<tr><td width="2"></td>
		<td width="200"><b>Last Name</b></td>
		<td width="2"></td>
		<td width="254">{{ lastname }}</td>
		<td width="2"></td>
		</tr>
		<tr><td colspan="5" bgcolor="#E5E5E5" height="1"></td></tr> <!-- grey line -->

		<tr><td width="2"></td>
		<td width="200"><b>Date of Birth</b></td>
		<td width="2"></td>
		<td width="254">{{ date_of_birth }}</td>
		<td width="2"></td>
		</tr>
		<tr><td colspan="5" bgcolor="#E5E5E5" height="1"></td></tr> <!-- grey line -->

		<tr><td width="2"></td>
		<td width="200"><b>Nationality</b></td>
		<td width="2"></td>
		<td width="254">{{ nationality }}</td>
		<td width="2"></td>
		</tr>
		<tr><td colspan="5" bgcolor="#E5E5E5" height="1"></td></tr> <!-- grey line -->

		<tr><td width="2"></td>
		<td width="200"><b>Occupation</b></td>
		<td width="2"></td>
		<td width="254">{{ occupation }}</td>
		<td width="2"></td>
		</tr>
		<tr><td colspan="5" bgcolor="#E5E5E5" height="1"></td></tr> <!-- grey line -->

		<tr><td colspan="5" height="20"></td></tr> <!-- empty row -->

		<tr><td width="2"></td><td colspan="3"> <!-- sub-headline (H2) -->
		<h2 style="font-size:19px; font-family: Arial, Helvetica, sans-serif; margin: 0; mso-line-height-rule: exactly;">Address</h2>
		</td><td width="2"></td></tr>

		<tr><td colspan="5" height="5"></td></tr> <!-- empty row (5) -->

		<tr><td width="2"></td>
		<td width="200"><b>Street, Nr.</b></td>
		<td width="2"></td>
		<td width="254">{{ address }}</td>
		<td width="2"></td>
		</tr>
		<tr><td colspan="5" bgcolor="#E5E5E5" height="1"></td></tr> <!-- grey line -->

		<tr><td width="2"></td>
		<td width="200"><b>City</b></td>
		<td width="2"></td>
		<td width="254">{{ city }}</td>
		<td width="2"></td>
		</tr>
		<tr><td colspan="5" bgcolor="#E5E5E5" height="1"></td></tr> <!-- grey line -->

		<tr><td width="2"></td>
		<td width="200"><b>ZIP</b></td>
		<td width="2"></td>
		<td width="254">{{ zip_code }}</td>
		<td width="2"></td>
		</tr>
		<tr><td colspan="5" bgcolor="#E5E5E5" height="1"></td></tr> <!-- grey line -->
		{{#if address_suffix}}
		<tr><td width="2"></td>
		<td width="200"><b>Address Addition</b></td>
		<td width="2"></td>
		<td width="254">{{ address_suffix }}</td>
		<td width="2"></td>
		</tr>
		<tr><td colspan="5" bgcolor="#E5E5E5" height="1"></td></tr> <!-- grey line -->
		{{/if}}
		<tr><td width="2"></td>
		<td width="200"><b>Country</b></td>
		<td width="2"></td>
		<td width="254">{{ country }}</td>
		<td width="2"></td>
		</tr>
		<tr><td colspan="5" bgcolor="#E5E5E5" height="1"></td></tr> <!-- grey line -->

		<tr><td colspan="5" height="20"></td></tr> <!-- empty row -->

		<tr><td width="2"></td><td colspan="3"> <!-- sub-headline (H2) -->
		<h2 style="font-size:19px; font-family: Arial, Helvetica, sans-serif; margin: 0; mso-line-height-rule: exactly;">Contact</h2>
		</td><td width="2"></td></tr>

		<tr><td colspan="5" height="5"></td></tr> <!-- empty row (5) -->

		<tr><td width="2"></td>
		<td width="200"><b>Phone</b></td>
		<td width="2"></td>
		<td width="254">{{ phone }}</td>
		<td width="2"></td>
		</tr>
		<tr><td colspan="5" bgcolor="#E5E5E5" height="1"></td></tr> <!-- grey line -->

		<tr><td width="2"></td>
		<td width="200"><b>E-Mail</b></td>
		<td width="2"></td>
		<td width="254">{{ email_from }}</td>
		<td width="2"></td>
		</tr>
		<tr><td colspan="5" bgcolor="#E5E5E5" height="1"></td></tr> <!-- grey line -->

		<tr><td colspan="5" height="20"></td></tr> <!-- empty row -->
		{{#if extras}}
		<tr><td width="2"></td><td colspan="3"> <!-- sub-headline (H2) -->
		<h2 style="font-size:19px; font-family: Arial, Helvetica, sans-serif; margin: 0; mso-line-height-rule: exactly;">Other</h2>
		</td><td width="2"></td></tr>

		<tr><td colspan="5" height="5"></td></tr> <!-- empty row (5) -->
		{{#each extras}}
		<tr><td width="2"></td>
		<td width="200"><b>{{ en }}</b></td>
		<td width="2"></td>
		<td width="254">{{ val }}</td>
		<td width="2"></td>
		</tr>
		<tr><td colspan="5" bgcolor="#E5E5E5" height="1"></td></tr> <!-- grey line -->
		{{/each}}

		<tr><td colspan="5" height="20"></td></tr> <!-- empty row -->
		{{/if}}
		<tr><td width="2"></td><td colspan="3"> <!-- sub-headline (H2) -->
		<h2 style="font-size:19px; font-family: Arial, Helvetica, sans-serif; margin: 0; mso-line-height-rule: exactly;">Comments</h2>
		</td><td width="2"></td></tr>

		<tr><td colspan="5" height="5"></td></tr> <!-- empty row (5) -->

		<tr><td width="2"></td>
		<td width="200"><b>Comment Course</b></td>
		<td width="2"></td>
		<td width="254">{{ course_comment }}</td>
		<td width="2"></td>
		</tr>
		<tr><td colspan="5" bgcolor="#E5E5E5" height="1"></td></tr> <!-- grey line -->

		<tr><td width="2"></td>
		<td width="200"><b>Comment Accommodation</b></td>
		<td width="2"></td>
		<td width="254">{{ accommodation_comment }}</td>
		<td width="2"></td>
		</tr>
		<tr><td colspan="5" bgcolor="#E5E5E5" height="1"></td></tr> <!-- grey line -->

  </table>
	</td>
	<td width="20"></td></tr>
	<tr><td width="20" height="20"></td><td width="460" height="20"></td><td width="20" height="20"></td></tr>
</table>

</body>
</html>
